/**
 * This ruleset allows any authenticated user to perform read and write operations.
 * It's suitable for prototyping where granular access control is not yet a priority.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * Helper function to check if the user is signed in.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * This rule matches any document in any collection.
     * It allows read and write access to any authenticated user.
     */
    match /{path=**} {
      allow read, write: if isSignedIn();
    }
  }
}
